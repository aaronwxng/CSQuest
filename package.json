{
  "name": "phaser-coding-game",
  "version": "1.0.0",
  "description": "Top-down multiplayer RPG educational coding game built with Phaser",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:server": "tsc --project tsconfig.server.json"
  },
  "keywords": [
    "phaser",
    "rpg",
    "multiplayer",
    "educational",
    "coding-game"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "phaser": "^3.90.0",
    "socket.io-client": "^4.7.5",
    "socket.io": "^4.7.5",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "monaco-editor": "^0.45.0",
    "uuid": "^9.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "tsx": "^4.7.0",
    "concurrently": "^8.2.2"
  }
}
